<view class="consult">
	<view class="consults">
		<textarea class="consult-txt" bindinput="suggestInput" value="{{suggest}}" placeholder="请输入留言内容，我们将尽快联系您">

		</textarea>
	</view>
	<view class="contacts">
		<input type="text" class="input-txt" bindinput="emailInput" value="{{email}}" placeholder="请输入电话或有邮箱"/>
	</view>
	<view class="btn-wrap u-clearfix">
		<button class="btns u-fl-l save" bindtap="saveData">保存</button>
		<button class="btns u-fl-r clear"  bindtap="resetData">清空</button>
	</view>
</view>
